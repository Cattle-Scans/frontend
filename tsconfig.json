{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "noEmitOnError": false, // ✅ still emit even if errors exist
    "skipLibCheck": true, // ✅ skip type errors from node_modules
    "noUnusedLocals": false, // ✅ allow unused imports
    "noUnusedParameters": false,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}